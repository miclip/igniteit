

<div class="form-group {{if showError 'has-error '}} {{if showSuccess 'has-success'}}">
	<div class="control-label">
		{{label labelText for=name }} {{#if required}}<span class="required-asterisk red">*</span>{{/if}}
	</div>		
		{{#if showError}}
			{{input value=value name=name class="form-control form-control-error"  focus-out="showErrors" type=type placeholder=placeholder}}
		{{else if showSuccess}}
			{{input value=value name=name class="form-control form-control-success"  focus-out="showErrors" type=type placeholder=placeholder}}
		{{else}}
			{{input value=value name=name class="form-control" focus-out="showErrors" type=type placeholder=placeholder}}
		{{/if}}		
		{{#if showError}}
	  	<p class="error-message">{{errors}}</p>
		{{/if}} 		
</div>