{{outlet}}	
<div class="row">
  {{#each model as |org|}}
    <div class="col-md-5 col-lg-4">
    	<div class="card card-inverse card-organization">
        <div class="card-block">
          <div class="card-edits  card-organization">
            {{#link-to 'dashboard.organizations.edit' org}}<i class="fa fa-edit" tooltip="Edit Organization"></i>{{/link-to}}
            <a {{action 'showModal' 'confirm-delete' org}}><i class="fa fa-trash" tooltip="Delete Organization"></i></a>
          </div>
          <h3 class="card-title">{{org.name}}</h3>
        </div>
        {{img-liquid image=org.logo fill=true horizontalAlign="center" verticalAlign="50%"}}
        <div class="card-block">
         {{#if org.website}}
           <a href="{{org.website}}" target="new" class="btn btn-primary"><i class="fa fa-external-link"></i> Visit Website</a>
          {{/if}}
        </div>
      </div>
    </div>
  {{/each}}
</div>

