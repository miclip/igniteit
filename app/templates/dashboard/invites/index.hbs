{{outlet}}	
<div class="row">
  {{#each model as |invite|}}
    <div class="col-md-5 col-lg-4">
    	<div class="card card-inverse card-invite">
        <div class="card-block">
          <div class="card-edits  card-invite">
            {{#link-to 'dashboard.invites.edit' invite class="btn"}}<i class="fa fa-edit" tooltip="Edit Invite"></i>{{/link-to}}
            <a class="btn" {{action 'showModal' 'confirm-resend' invite}}><i class="fa fa-repeat" tooltip="Resend Invite"></i></a>
            <a class="btn" {{action 'showModal' 'confirm-delete' invite}}><i class="fa fa-trash" tooltip="Delete Invite"></i></a>
          </div>
          <h4 class="card-title text-capitalize">{{invite.role}}</h4>
          {{gravatar-image email=invite.email 
				  defaultImage='identicon'
				  class='img-responsive img-rounded'
				  size=100}}
          <h3 class="card-title">{{invite.name}}</h3>
        </div>        
        <div class="card-block">
        	<p class="card-text"><i class="fa fa-university"></i> <span class="p-r"></span>{{invite.organization.name}}</p>
        	<p class="card-text"><i class="fa fa-envelope"></i> <span class="p-r"></span>{{invite.email}}</p>
        	<p class="card-text">
        			{{#if invite.emailSent}}
        					<i class="fa fa-paper-plane green"></i> <span class="p-r"></span> Sent
        			{{else}}
									<i class="fa fa-paper-plane red"></i> <span class="p-r"></span> Not sent 
        			{{/if}} {{moment-from-now invite.emailSentDate}}</p>
        	<p class="card-text">  
        			{{#if invite.accepted}}
        					<i class="fa fa-user-plus green"></i> <span class="p-r"></span>Accepted 
        			{{else}}
									<i class="fa fa-user-plus red"></i> <span class="p-r"></span>Not yet accepted  
        			{{/if}}{{moment-from-now invite.acceptedDate}}</p>
        	
        </div>
      </div>
    </div>
  {{/each}}
</div>
